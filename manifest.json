{
    "name": "unicode faces",
    "description": "allow you you to copy and paste unicode faces",
    "version": "1.0",
    "manifest_version": 3,
    "permissions": [
        "storage",
        "scripting"
    ],
    "action": {
        "default_popup": "popup.html"
    },
    "background": {
        "service_worker": "background.js"
    },
    "icons": {
        "16": "/images/lenny16px.png",
        "32": "/images/lenny32px.png",
        "48": "/images/lenny48px.png",
        "128": "/images/lenny128px.png"
    }
}